<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="29dp"

        android:layout_marginEnd="23dp"
        android:src="@drawable/icplayback"
        android:id="@+id/playback_speed_btn"
        app:tint="@color/white"
        app:layout_constraintEnd_toStartOf="@id/tv_speed"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_speed"
            android:text="@string/_1x"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="29dp"
            app:layout_constraintEnd_toStartOf="@id/setting_btn"
            android:layout_marginEnd="23dp"
            />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_settings_24"
        android:id="@+id/setting_btn"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        app:tint="@color/white"
        app:layout_constraintEnd_toStartOf="@id/fullScreen_btn"
        android:layout_marginEnd="23dp"
        />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/fullScreen_btn"
    app:layout_constraintBottom_toBottomOf="parent"
    android:src="@drawable/ic_baseline_fullscreen_24"
    android:layout_marginEnd="29dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:tint="@color/white"
    android:layout_marginBottom="29dp"
    />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_replay_10_24"
        android:id="@+id/play_btn"
        android:padding="4dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/btn_backward"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="43dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/play_btn"
        android:layout_marginRight="43dp"
        android:src="@drawable/ic_back"
        android:id="@+id/btn_backward"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="47dp"
        android:src="@drawable/ic_forward"
        android:id="@+id/forward_btn"
        app:layout_constraintStart_toEndOf="@id/play_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:id="@+id/btn_next"
        android:src="@drawable/ic_next"
        app:layout_constraintStart_toEndOf="@id/forward_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>